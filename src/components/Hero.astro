---
import ContactPills from "./ContactPills.astro";
interface Social { label: string; href: string }
const { name, tagline, location, avatar, email, socials } = Astro.props as {
  name: string; tagline: string; location: string; avatar: string; email: string; socials: Social[]
};
---
<header style="display:flex; align-items:center; gap:24px; flex-wrap:wrap;">
  <img src={avatar} alt={`Photo of ${name}`} width="96" height="96"
       style="width:96px; height:96px; border-radius:50%; object-fit:cover; box-shadow:var(--shadow); border:1px solid var(--border);" loading="eager" />
  <div style="display:flex; flex-direction:column; gap:6px;">
    <h1 style="font-size:clamp(28px, 4vw, 40px); font-weight:800; letter-spacing:.2px; margin:0;">{name}</h1>
    <div style="color:var(--muted); font-weight:500;">{tagline} â€¢ {location}</div>
  </div>
  <div style="flex-basis:100%">
    <ContactPills email={email} socials={socials} />
  </div>
</header>