---
const { projects = [] } = Astro.props as {
  projects: { title: string; href: string; summary: string; meta?: string }[];
};
---
<section aria-labelledby="projects-title" style="margin-top:40px;">
  <h2 id="projects-title" class="section-title">Creations</h2>
  <div class="proj-grid" role="list">
    {projects.map((p) => (
      <article role="listitem">
        <a class="card proj-card" href={p.href} target="_blank" rel="noopener noreferrer">
          <h3 style="margin:0; font-size:16px;">{p.title}</h3>
          <p style="margin:0; color:var(--muted);">{p.summary}</p>
          {p.meta && <span style="font-size:12px; color:var(--muted);">{p.meta}</span>}
        </a>
      </article>
    ))}
  </div>
  <style>
    .proj-grid {
      display: grid;
      gap: 16px;
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }
    @media (min-width: 640px) {
      .proj-grid { grid-template-columns: repeat(2, minmax(0, 1fr)); }
    }
    @media (min-width: 980px) {
      .proj-grid { grid-template-columns: repeat(3, minmax(0, 1fr)); }
    }
    .proj-card { display:block; transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease; }
    .proj-card:hover { transform: translateY(-2px); border-color: var(--ring); box-shadow: 0 16px 42px rgba(0,0,0,.20); }
  </style>
</section>