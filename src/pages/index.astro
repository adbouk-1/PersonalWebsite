---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import Now from "../components/Now.astro";
import ProjectsGrid from "../components/ProjectsGrid.astro";
import Footer from "../components/Footer.astro";

import me from "../data/me.json";
import now from "../data/now.json";
import projects from "../data/projects.json";
const { items, updated } = now;
---
<Base title={me.name} description={`Minimal personal card site for ${me.name}.`}>
  <Hero
    name={me.name}
    tagline={me.tagline}
    avatar={me.avatar}
    email={me.email}
    socials={me.socials}
  />

  <!-- Short bio -->
  <section aria-labelledby="about-title" style="margin-top:40px;">
    <h2 id="projects-title" class="section-title" style="font-size: 2rem; font-weight: 800;">About</h2>
    <div class="card">
      <p>{me.bio} Currently based in {me.location}.</p>
    </div>
  </section>

  <Now items={items} updated={updated} />
  <ProjectsGrid projects={projects} />
  <Footer name={me.name} />
</Base>